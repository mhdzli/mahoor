{
  "manifest_version": 2,
  "name": "Mahoor",
  "description": "Adds a new Iranian(Persian/Jalali/Khorshidi) date column to ThunderBird.",
  "version": "1.2.2",
  "homepage_url": "https://github.com/mhdzli/mahoor",
  "author": "M.Zeinali",
  "browser_specific_settings": {
    "gecko": {
      "id": "mahour@zmim.ir",
      "strict_min_version": "115.10.0",
      "strict_max_version": "128.*"
    }
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "icons": {
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  },
  "experiment_apis": {
    "customColumns": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "customColumns"
          ]
        ],
        "script": "api/implementation.js"
      }
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"]
}
